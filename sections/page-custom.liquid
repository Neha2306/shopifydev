<section class="page-custom">
  <div class="page-custom__inner">
    <h1 class="page-custom__title">
      {{ page.title }}
    </h1>

    {% if customer %}
      <p>Welcome, {{ customer.email }}. This is your custom page.</p>
    {% else %}
      <p>This is a custom page visible to everyone.</p>
    {% endif %}

    <div class="page-custom__content">
      {{ page.content }}
    </div>
  </div>
</section>

